Python: def reverse_string(s):
    """
    Функция возвращает строку в обратном порядке используя рекурсию.
    
    :param s: исходная строка
    :return: перевернутая строка
    """
    # Базовый случай: если длина строки меньше либо равна одному символу,
    # вернуть её без изменений
    if len(s) <= 1:
        return s
    # Рекурсивный случай: берем последний символ и прибавляем к нему
    # перевернутую остальную часть строки
    else:
        return s[-1] + reverse_string(s[:-1])

# Пример использования
input_str = input("Введите строку для переворота: ")
reversed_str = reverse_string(input_str)
print(f"Перевёрнутая строка: {reversed_str}")
Результат работы: Введенная строка: привет 
                  Перевёрнутая строка: тевирп

C++:
				C++
#include <iostream>
#include <string>
using namespace std;

// Рекурсивная функция для переворота строки
void reverseString(string& str) {
    // Базовый случай: если строка пустая или состоит из одного символа
    if (str.length() <= 1) {
        return;
    }

    // Сохраняем первый символ
    char firstChar = str.front();

    // Удаляем первый символ из строки
    str.erase(str.begin());

    // Рекурсивно переворачиваем остаток строки
    reverseString(str);

    // Добавляем сохранённый первый символ в конец строки
    str.push_back(firstChar);
}

int main() {
    string inputStr;
    cout << "Введите строку для переворота: ";
    cin >> inputStr;

    // Переводим строку методом рекурсии
    reverseString(inputStr);

    cout << "Перевернутая строка: " << inputStr << endl;
    return 0;
}
Результат работы: Введенная строка: привет 
                  Перевёрнутая строка: тевирп
      Java:
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введите строку для переворота: ");
        String input = scanner.nextLine();
        String reversed = reverseString(input);
        System.out.println("Перевёрнутая строка: " + reversed);
    }

    // Рекурсивная функция для переворота строки
    private static String reverseString(String str) {
        // Базовый случай: если строка пустая или одна буква, возвращаем её же
        if (str.isEmpty() || str.length() == 1) {
            return str;
        }
Результат работы: Введенная строка: привет 
                  Перевёрнутая строка: тевирп
        // Рекурсивный случай: берём первую букву и ставим её последней, затем рекурсивно переворачиваем остальное
        return reverseString(str.substring(1)) + str.charAt(0);
    }
}
